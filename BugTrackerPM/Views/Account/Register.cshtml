@model BugTrackerPM.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="well col-md-8">
    <h2 class="font">@ViewBag.Title.</h2>
    <h4 class="font">Create a new account.</h4>
</div>

<div class="row">


    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal well col-md-8", role = "form" }))
    {
        @* @Html.AntiForgeryToken() *@


        @Html.ValidationSummary("", new { @class = "text-danger" })

    <!-- =========================First Name ==========================================-->
        <div class="form-group well">
            <div class="col-md-2" style="text-align:right"><h4 class="font">First Name: </h4></div>
            <div class="col-md-10">

                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>


    <!-- ========================= Last Name ==========================================-->

        <div class="form-group well">
            <div class="col-md-2" style="text-align:right"><h4 class="font">Last Name: </h4></div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>


    <!-- ========================= Email ==========================================-->
        <div class="form-group well">
            <div class="col-md-2" style="text-align:right"><h4 class="font">Email: </h4></div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>


    <!-- ========================= Password ==========================================-->
        <div class="form-group well">
            <div class="col-md-2" style="text-align:right"><h4 class="font">Password: </h4></div>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>

    <!-- ========================= Confirm Password ==========================================-->
        <div class="form-group well">
            <div class="col-md-2" style="text-align:right"><h4 class="font">Confirm Password: </h4></div>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
