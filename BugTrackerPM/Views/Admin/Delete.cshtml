@using BugTrackerPM.Models
@model AdminIndexViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete User</h2>
<h4> User to Delete: @(Model.user.DisplayName) <br /> Are you sure you want to delete this user?</h4>

<div>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>First Name: </dt>
                <dd>@Model.user.FirstName </dd>
                <dt>Last Name: </dt>
                <dd>@Model.user.LastName</dd>
                <dt>Email: </dt>
                <dd>@Model.user.Email</dd>
                <dt>Projects: </dt>
                @foreach (Project userProject in Model.user.Projects)
                {
                    <dd>@userProject.ProjectTitle </dd>
                }
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", Model.user.Id )
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" style="margin: 20px 75px" /> 
                    
                </div>
            }


            @*@Html.ActionLink("Delete User", "Delete", new { id = Model.user.Id }, new { @class = "btn btn-primary" })*@
        </div>
    </div>
    <div class="row">
        <hr />
        @Html.ActionLink("Return to Index", "Index")
    </div>
</div>
