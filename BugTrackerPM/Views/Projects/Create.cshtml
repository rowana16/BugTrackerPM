@model BugTrackerPM.Models.Project

@{
    ViewBag.Title = "Create";
}

<img src="~/Content/Images/Fireworks.jpeg" style="float: right; width:250px; height: 175px; margin-bottom: 15px; margin-right: 50px; border-radius: 25px;" />
<div class="well col-md-8 font">
    <h2 class="font">Create a New Project</h2>
</div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @using (Html.BeginForm("Create", "Projects", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <div class="form-group" style="margin-top:200px; margin-left:50px">
                <div class="col-md-2 font"><h4 class="font">New Project Title:</h4></div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.ProjectTitle, new { htmlAttributes = new { @class = "form-control font" } })
                    @Html.ValidationMessageFor(model => model.ProjectTitle, "", new { @class = "text-danger" })
               
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" value="     Create     " class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
}

<div>
    <h3>@Html.ActionLink("Back to List", "Index")</h3>
</div>
