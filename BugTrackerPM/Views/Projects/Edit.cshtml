@using BugTrackerPM.Models
@model ProjectEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Manager Project Roles</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Currently Assigned Roles</h3>
            @using (Html.BeginForm("RemoveAssignment", "Projects", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", Model.project.Id )

                @Html.ListBox("SelectedCurrentAssignments", Model.assignedUsers, new { style = "width:250px; color: steelblue;" })
                <div class="col-md-10">
                    <input type="submit" class="btn btn-primary" value="Remove Highlighted Assignments" />
                </div>
            }
        </div>
        <div class="col-md-6">
            <h3>Currently Unassigned Roles</h3>
            @using (Html.BeginForm("AddAssignment", "Projects", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", Model.project.Id)


                @Html.ListBox("SelectedAbsentAssignments", Model.absentUsers, new { style = "width:250px; color: steelblue;" })
                <div class="col-md-10">
                    <input type="submit" class="btn btn-primary" value="Add Highlighted Assignments" />
                </div>
            }

        </div>

    </div>
    <div class="row">
        <hr />
        @Html.ActionLink("Return to Index", "Index")
    </div>

</div>
