@using BugTrackerPM.Models
@model ProjectIndexViewModel

@{
    ViewBag.Title = "Index";
}
<img src="~/Content/Images/Fireworks.jpeg" style="float: right; width:250px; height: 175px; margin-bottom: 15px; margin-right: 50px; border-radius: 25px;" />
<h2 style="margin-top: 70px">Index For: @Model.loggedInUser.DisplayName</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table myTable">
    <thead>
        <tr>
            <th>Project Title</th>
            <th>Create Date</th>
            <th>Update Date</th>
            <th>Users</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.currentProjects)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.project.ProjectTitle) </td>                
                <td> @Html.DisplayFor(modelItem => item.project.CreateDate)</td>
                <td> @Html.DisplayFor(modelItem => item.project.UpdateDate)</td>
                <td> @Html.DisplayFor(modelItem => item.userList  )</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.project.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.project.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.project.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
