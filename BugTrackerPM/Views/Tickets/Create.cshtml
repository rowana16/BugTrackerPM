@model BugTrackerPM.Models.Ticket

@{
    ViewBag.Title = "Create";
}
<img src="~/Content/Images/Mosquito.jpeg" style="float: right; width:250px; height: 175px; margin-bottom: 15px; margin-right: 50px; border-radius: 25px;" />
<div class="well col-md-8">
    <h2 class="font">Create a New Ticket</h2>
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="margin-top:210px">
        <div class="form-group" >
            <div class="col-md-2"><h4 class="font">Ticket Priority:</h4></div>
            <div class="col-md-10">
                @Html.DropDownList("PriorityId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PriorityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"><h4 class="font">Ticket Type:</h4></div>
            <div class="col-md-10">
                @Html.DropDownList("TicketTypeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TicketTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"><h4 class="font">Description:</h4></div>
            <div class="col-md-10">
                
                @Html.TextAreaFor(model => model.Description, new { @rows = 10, cols = 40 })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<h3>
    @Html.ActionLink("Back to List", "Index")
</h3>
