@using BugTrackerPM.Models
@model TicketAttachmentViewModel

@{
    ViewBag.Title = "CreateTicketAttachment";
}

<img src="~/Content/Images/Mosquito.jpeg" style="float: right; width:250px; height: 175px; margin-bottom: 15px; margin-right: 50px; border-radius: 25px;" />
<div class="well col-md-8">
    <h2 class="font">Create Ticket Attachment</h2>

    <h3 class="font">Project: @Model.ticket.Project.ProjectTitle</h3>
    <h3 class="font">Ticket: @Model.ticket.Description </h3>
</div>
<div class="container">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        @using (Html.BeginForm("CreateTicketAttachment","Tickets", FormMethod.Post, new { enctype = "Multipart/form-data" } ))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("id",new { id = Model.ticket.Id })
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Attachment URL:</label>
                    </div>
                    <div class="col-md-12">
                        <input type="file" class="form-control" id="fileUpload" name ="URL" >
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Attachment Description:</label>
                    </div>
                    <div class="col-md-12">
                        <input type="text" class="form-control" id="Body" name="Body">
                    </div>
                </div>

            </div>
            <input type="submit" class="btn btn-primary" value="Create Attachment" />
        }
    </div>    
</div>
<h3>@Html.ActionLink("Back to Ticket", "Details", "Tickets", new { id = Model.ticket.Id }, null)</h3>
