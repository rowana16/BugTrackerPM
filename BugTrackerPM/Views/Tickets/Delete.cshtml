@model BugTrackerPM.Models.Ticket

@{
    ViewBag.Title = "Delete";
}

<img src="~/Content/Images/Mosquito.jpeg" style="float: right; width:250px; height: 175px; margin-bottom: 15px; margin-right: 50px; border-radius: 25px;" />

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           <label class="control-label col-md-12">Assigned:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assigned.DisplayName)
        </dd>

        <dt>
            <label class="control-label col-md-12">Priority:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Priority.PriorityLevel)
        </dd>

        <dt>
            <label class="control-label col-md-12">Project Name:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.ProjectTitle)
        </dd>

        <dt>
            <label class="control-label col-md-12">Ticket Status:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.StatusDescription)
        </dd>

        <dt>
            <label class="control-label col-md-12">Submitter Name:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Submitter.DisplayName)
        </dd>

        <dt>
            <label class="control-label col-md-12">Ticket Type:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketType.TypeDescription)            
        </dd>

        <dt>
            <label class="control-label col-md-12">Ticket Description:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <label class="control-label col-md-12">Create Date:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>

        <dt>
            <label class="control-label col-md-12">Update Date:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
