@using BugTrackerPM.Models
@model TicketViewModel

@{
    ViewBag.Title = "Index";

}

<img src="~/Content/Images/Mosquito.jpeg" style="float: right; width:250px; height: 175px; margin-bottom: 15px; margin-right: 50px; border-radius: 25px;" />
<div class="well col-md-8">
    <h2 class="font">Tickets for: @Model.user.DisplayName</h2>
    <h3>@Html.ActionLink("Create New", "Create")</h3>
</div>



<table class="table display myTable">
    <thead>
        <tr>
            <th> Project Title</th>
            <th> Ticket Description</th>
            <th> Prioritiy Level</th>
            <th> Ticket Status</th>
            <th> Assigned User</th>
            <th> Ticket Submitter</th>
            <th> Create Date</th>
            <th> Update Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ticket)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Project.ProjectTitle) </td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Priority.PriorityLevel)</td>
                <td>@Html.DisplayFor(modelItem => item.Status.StatusDescription)      </td>
                <td>@Html.DisplayFor(modelItem => item.Assigned.DisplayName)  </td>
                <td>@Html.DisplayFor(modelItem => item.Submitter.DisplayName) </td>
                <td>@Html.DisplayFor(modelItem => item.CreateDate)  </td>
                <td>@Html.DisplayFor(modelItem => item.UpdatedDate) </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Comments", "Details", new { id = item.Id }) 
                </td>
            </tr>
        }
    </tbody>
</table>
